{
  "compilerOptions": {
    "jsx": "react",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "target": "es2019",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "outDir": "./output",
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "rootDir": ".",
    "baseUrl": ".",
    "types": ["react", "node"]
  },
  "include": ["lib/**/*", "bin/**/*"]
}
